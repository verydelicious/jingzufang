<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/show_photos"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="@drawable/fipper_background" >
    </ViewFlipper>

    <TextView
        android:id="@+id/fg1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/show_photos"
        android:background="#ff000000" />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fg1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
    </RadioGroup>

    <LinearLayout
        android:id="@+id/jianjie_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg1"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="2dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_zhujing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租金:" />

            <TextView
                android:id="@+id/zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dip"
                android:textColor="#fff8220d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:text="元/月"
                android:textColor="#fff8220d"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginTop="2dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/fx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房型:" />

                <TextView
                    android:id="@+id/fangxing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:layout_toRightOf="@id/fx"
                     />

                <TextView
                    android:id="@+id/mj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fx"
                    android:text="面积:" />

                <TextView
                    android:id="@+id/mianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fx"
                    android:layout_marginLeft="13dip"
                    android:layout_toRightOf="@id/fx"
                     />

                <TextView
                    android:id="@+id/pf_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mianji"
                    android:layout_below="@id/fx"
                    android:layout_marginLeft="3dip"
                    android:layout_toRightOf="@id/mianji"
                    android:gravity="bottom"
                    android:text="m"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mianji"
                    android:layout_below="@id/fx"
                    android:layout_toRightOf="@id/pf_m"
                    android:gravity="bottom"
                    android:text="2"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/lc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼层:" />

                <TextView
                    android:id="@+id/louhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:layout_toRightOf="@id/lc"
                     />

                <TextView
                    android:id="@+id/zx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lc"
                    android:text="装修:" />

                <TextView
                    android:id="@+id/zhuangxiuchengdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lc"
                    android:layout_marginLeft="13dip"
                    android:layout_toRightOf="@id/zx"
                     />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/fg2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/jianjie_bar"
        android:layout_marginTop="2dip"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/dianhua_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg2"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="2dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lianxidianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/fg3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/dianhua_bar"
        android:layout_marginTop="2dip"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/ptss_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg3"
        android:layout_marginTop="2dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:text="配套设施"
            android:textColor="#ff696969"
            android:textSize="16dip"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_marginTop="2dip"
            android:background="#ff000000" />

        <TextView
            android:id="@+id/peitaosheshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/fg4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/ptss_bar"
        android:layout_marginTop="2dip"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/map_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg4"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/show_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/can_click_selector"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/dz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginTop="2dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="地址:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dizhi"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/ic_go"
                    android:gravity="left"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/load_map_cut"
                android:layout_width="match_parent"
                android:layout_height="300dip"
                android:layout_below="@id/dz"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fg5"
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:background="#ff000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/zhoubiansheshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/can_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/ic_go"
                android:gravity="center"
                android:text="周边设施"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>